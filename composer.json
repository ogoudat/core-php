{
    "name": "ogoudat/core",
    "description": "A set of basic utilities that makes PHP easier to deal with.",
    "type": "library",
    "keywords": ["i18n", "string", "unicode", "utf-8"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Peter Winnberg",
            "email": "hello@peterwinnberg.name",
            "homepage": "https://peterwinnberg.name/"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "friendsofphp/php-cs-fixer": "^2.7"
    },
    "autoload": {
        "psr-4": {"Ogoudat\\Core\\": "src/Ogoudat/Core"}
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    }
}
